doctype html
html
  head
    title login
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', href='assets/css/preloader.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src=`/assets/js/main${suffix}.js${version}` defer)
    link(rel='stylesheet', type='text/css', href='assets/css/app.css')
  body.loginBody

    .preloader
      .preloader__spinner

    .login
        .loginContainer
            h3 Авторизуйтесь
            hr
            
            form#loginForm(action='login' method="POST")
                .status
                input(type='text', name='login', placeholder='Логин')
                input(type='text', name='password', placeholder='Пароль')
                div
                    input.toMain(name="" type="submit" value="Отправить")
                    input.send(name="" type="reset" value="Очистить")
    script(src=`/assets/js/foundation${suffix}.js${version}` defer)
    script(src=`/assets/js/app${suffix}.js${version}` defer)                  
    script(src='assets/js/preloader.js')